generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())

  username String @unique
  password String

  name String
}

model Todo {
  id         String    @id @default(uuid())
  title      String
  isComplete Boolean   @default(false)
  createdAt  DateTime  @default(now())
  updatedAt  DateTime?

  @@map("Todos")
}
